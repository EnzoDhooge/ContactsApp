<main class="main-add">
    
    <div class="card-main">
        <h1>Edit contact</h1>
        <div class="card-body">
            <form action="/number/edit/{{contact.id}}" method="POST">
                <div class="form-group">
                    <input type="text" value="{{contact.title}}" class="form-control" name="title" placeholder="Name" autofocus required>
                </div>
                <div class="form-group">
                    <input type="number" value="{{contact.number}}" class="form-control" name="telefono" placeholder="Phone Number" required>
                </div>
                <div class="form-group">
                    <button class="btn-green">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
    
</main>